{
  "id": null,
  "uid": "shop-cdc",
  "title": "Shop CDC Dashboard",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "table",
      "title": "CDC Events (Elasticsearch)",
      "datasource": "Elasticsearch",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "query": "*"
        }
      ],
      "options": {
        "showHeader": true
      }
    },
    {
      "id": 2,
      "type": "piechart",
      "title": "CDC Operations last 1h (Prometheus)",
      "datasource": "Prometheus",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 12 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (op) (increase(db_changes_total[1h]))"
        }
      ],
      "options": {
        "legend": { "displayMode": "list", "showLegend": true },
        "pieType": "pie"
      }
    }
  ]
}


